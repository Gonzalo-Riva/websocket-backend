<div class="alert alert-primary" role="alert">
    <strong>Bienvenido!</strong> Esta es una lista con nuestros productos.
</div>

<!-- Section-->
<main id="diseño" class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            {{#each products}}
            <div class="col mb-5">
                <div class="card h-100">
                    <!-- Product image-->
                    <div style="position:relative; width: 100%; height: 200px; overflow: hidden">
                        <div style="position: absolute; left: 0%; top: 0%;">
                            <img class="card-img-top" src="{{thumbnail}}" alt="..." />
                        </div>
                    </div>

                    <!-- Product details-->
                    <div class="card-body p-4">
                        <div class="text-center">
                            <!-- Product name-->
                            <h5 class="fw-bolder">{{title}}</h5>
                            <!-- Product price-->
                            <p><strong>${{price}}</strong></p>
                            <p><small class="text-muted">Stock: {{stock}}</small></p>
                            <p><small>{{description}}</small></p>
                        </div>
                    </div>
                    <!-- Product actions-->
                    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                        <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="#">Añadir</a></div>
                    </div>
                </div>
            </div>

            {{/each}}
        </div>
    </div>
    </div>
</main>



